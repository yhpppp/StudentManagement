@model IEnumerable<Student>
@{ ViewBag.Title = "学生列表";}

<div class="card-deck">
    @foreach (var student in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@student.Name</h3>
            </div>
            <img class="card-img-top" src="~/images/noimage.jpg" alt="noimage" />
            <div class="card-footer text-center">
                @*<a href="/home/details/@student.Id" class="btn btn-primary">查看</a>

                @Html.ActionLink("HTMLTaghelper 查看", "details", new { id = student.Id })*@
                @*Tag Helper: *@
                <a class="btn btn-primary m-1" asp-controller="home" asp-action="details" asp-route-id="@student.Id">查看</a>
                <a href="#" class="btn btn-primary m-1">编辑</a>
                <a href="#" class="btn btn-danger m-1">删除</a>
            </div>
        </div>
    }
</div>
>